{
  "name": "boringtunjs",
  "version": "0.0.2",
  "description": "A userspace WireGuard VPN implementation for NodeJS based on BoringTun",
  "main": "index.js",
  "repository": {
    "url": "git+ssh://git@github.com/boringjs/boringtun.js.git"
  },
  "scripts": {
    "build:mac_m": "BUILD_DIR=mac_m CMAKE_JS_ARCH=arm64 cmake-js compile",
    "build:mac_intel": "BUILD_DIR=mac_intel cmake-js compile",
    "build:win": "set BUILD_DIR=win && cmake-js compile",
    "build:linux": "BUILD_DIR=linux cmake-js compile",
    "build:boringtun": "cd boringtun && cargo build --lib --release --no-default-features --features \"ffi-bindings\"",
    "update:gitmodules": "git submodule update",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "Andrei Smolnikov",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "cmake-js": "^7.3.0"
  }
}
