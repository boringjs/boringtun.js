{
  "name": "boringtunjs",
  "version": "0.0.8",
  "description": "A userspace WireGuard VPN implementation for NodeJS based on BoringTun",
  "main": "index.js",
  "repository": {
    "url": "git+ssh://git@github.com/boringjs/boringtun.js.git"
  },
  "scripts": {
    "clean": "rm -rf ./build",
    "build": "cmake-js compile",
    "build:boringtun": "cd boringtun && cargo build --lib --release --no-default-features --features \"ffi-bindings\"",
    "update:gitmodules": "git submodule update",
    "install": "node-pre-gyp install --fallback-to-build",
    "prepublish": "node-pre-gyp package",
    "prepublishOnly": "node-pre-gyp publish",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "binary": {
    "module_name": "boringtunjs",
    "module_path": "./build/{platform}-{arch}/",
    "host": "https://github.com/boringjs/boringtun.js/releases/download/",
    "remote_path": "{version}",
    "package_name": "{platform}-{arch}.tar.gz"
  },
  "keywords": [],
  "author": "Andrei Smolnikov",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "cmake-js": "^7.3.0"
  }
}
